        android:text="Q2" />

    <TextView
        android:id="@+id/q3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="Q3" />

    <TextView
        android:id="@+id/q4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="Q4" />

    <TextView
        android:id="@+id/q5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="Q5" />
</LinearLayout>